<% @contactgroups.keys.sort.each do |contactgroup| %>
define contactgroup {
  contactgroup_name   <%= contactgroup %>
<%- if @contactgroups[contactgroup].include? 'alias' -%>
  alias               <%= @contactgroups[contactgroup]['alias'] %>
<%- end -%>
<%- if @contactgroups[contactgroup].include? 'members' -%>
  members             <%= @contactgroups[contactgroup]['members'].sort.join(',') %>
<%- end -%>
}
<% end %>
